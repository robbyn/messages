<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE messages
    PUBLIC '-//tastefuljava.org//Message File 1.0//EN' 'messages.dtd'>
<messages language="en">
    <message name="appNotFound" >
        <parameters><![CDATA[ String app ]]></parameters>
        <text>
            Unknown application: <out value="app"/>.
        </text>
    </message>
    <message name="choose" >
        <parameters><![CDATA[ String a, String b ]]></parameters>
        <text>
            (<choose>
                <when condition="a==0">
                    zero
                    <choose>
                        <when condition="b==0">
                            zero
                        </when>
                        <when condition="b==1">
                        one
                    </when>
                    <when condition="b==2">
                        two
                    </when>
                    <when condition="b==3">
                        three
                    </when>
                    <otherwise>
                        something else
                    </otherwise>
                </choose>
            </when>
            <when condition="a==1">
                one
            </when>
            <when condition="a==2">
                two
            </when>
            <when condition="a==3">
                three
            </when>
            <otherwise>
                something else
                <if condition="b==4">
                    four
                </if>
            </otherwise>
        </choose>)
        </text>
    </message>
    <message name="list" >
        <parameters><![CDATA[ List<?> list ]]></parameters>
        <text>
            (<list value="list" variable="elem">
                <out value="elem"/>
            </list>)
        </text>
    </message>
    <message name="list2" >
        <parameters><![CDATA[ List<?> list ]]></parameters>
        <text>
            (<list value="list" variable="elem">
                <out value="text.enquote(elem)"/>
            </list>)
        </text>
    </message>
    <message name="list3" >
        <parameters><![CDATA[ List<?> list ]]></parameters>
        <text>
            (<out value='text.join(list,", ")'/>)
        </text>
    </message>
    <message name="list4" >
        <parameters><![CDATA[ List<?> list ]]></parameters>
        <text>
            (<out value='text.joinEnquote(list,", ")'/>)
        </text>
    </message>
    <message name="index" >
        <parameters><![CDATA[ List<?> a,int i ]]></parameters>
        <text>
            <out value="a[i]"/>
        </text>
    </message>
    <message name="text" >
        <parameters><![CDATA[ String line1,String line2,String line3 ]]></parameters>
        <text>
            ----    Begin text    ----

            <out value="line1"/>

            <out value="line2"/>

            <out value="line3"/>

            ----    End text    ----
        </text>
    </message>
</messages>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE messages
    PUBLIC '-//tastefuljava.org//Message File 1.0//EN' 'messages.dtd'>
<messages default-language="en">
    <message name="appNotFound" parameters="app">
        <text language="en">
            Unknown application: <out value="app"/>.
        </text>
    </message>
    <message name="select" parameters="a,b">
        <text language="en">
            (<select>
                <when condition="a==0">
                    zero
                    <select>
                        <when condition="b==0">
                            zero
                        </when>
                        <when condition="b==1">
                            one
                        </when>
                        <when condition="b==2">
                            two
                        </when>
                        <when condition="b==3">
                            three
                        </when>
                        <otherwise>
                            something else
                        </otherwise>
                    </select>
                </when>
                <when condition="a==1">
                    one
                </when>
                <when condition="a==2">
                    two
                </when>
                <when condition="a==3">
                    three
                </when>
                <otherwise>
                    something else
                    <if condition="b==4">
                        four
                    </if>
                </otherwise>
            </select>)
        </text>
    </message>
    <message name="list" parameters="list">
        <text language="en">
            (<list value="list" variable="elem">
                <out value="elem"/>
            </list>)
        </text>
    </message>
    <message name="list2" parameters="list">
        <text language="en">
            (<list value="list" variable="elem">
                <out value="text.enquote(elem)"/>
            </list>)
        </text>
    </message>
    <message name="list3" parameters="list">
        <text language="en">
            (<out value='text.join(list,", ")'/>)
        </text>
    </message>
    <message name="list4" parameters="list">
        <text language="en">
            (<out value='text.joinEnquote(list,", ")'/>)
        </text>
    </message>
    <message name="hello" parameters="name">
        <text language="en">
            Hello <out value="name"/>!!!
        </text>
        <text language="fr">
            Bonjour <out value="name"/>!!!
        </text>
    </message>
    <message name="index" parameters="a,i">
        <text language="en">
            <out value="a[i]"/>
        </text>
    </message>
</messages>

<?xml version="1.0" encoding="UTF-8"?>
<!ELEMENT messages (description?,definition*,message*)>
<!ATTLIST messages
    prefix CDATA #IMPLIED
    default-language CDATA #IMPLIED
>

<!ELEMENT description (#PCDATA)>

<!ELEMENT definition (#PCDATA)>
<!ATTLIST definition
    name CDATA #REQUIRED
    value CDATA #IMPLIED
>

<!ELEMENT message (description?,text+)>
<!ATTLIST message
    name CDATA #REQUIRED
    parameters CDATA #IMPLIED
>

<!ELEMENT text (#PCDATA|out|if|choose|list)*>
<!ATTLIST text
    language CDATA #REQUIRED
>

<!ELEMENT if (#PCDATA|out|if|choose|list)*>
<!ATTLIST if
    condition CDATA #REQUIRED
>

<!ELEMENT choose (when+,otherwise?)>

<!ELEMENT when (#PCDATA|out|if|choose|list)*>
<!ATTLIST when
    condition CDATA #REQUIRED
>

<!ELEMENT otherwise (#PCDATA|out|if|choose|list)*>

<!ELEMENT out EMPTY>
<!ATTLIST out
    value CDATA #REQUIRED
>

<!ELEMENT list (#PCDATA|out|if|choose|list)*>
<!ATTLIST list
    value CDATA #REQUIRED
    variable CDATA #REQUIRED
    separator CDATA #IMPLIED
>
